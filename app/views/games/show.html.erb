<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyDJbp32tSbN-En9Zb2eU43iGwPmqp2uYwc"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<!-- <p id="notice"><%= notice %></p> -->
<div>
<p>
  <%= image_tag(@game.gametype.image, size: "100") %>
  <%= @game.name %>
</p>
</div>

<% if user_signed_in? && current_user!=@game.user && !@game.attendees.map(&:id).include?(current_user.id) %>
      <%= link_to 'join game', join_game_path(@game.id),:class => 'btn btn-primary btn-sm'%>
  <% elsif user_signed_in? && current_user!=@game.user && @game.attendees.map(&:id).include?(current_user.id) %>
      <%= button_to 'leave game', leave_game_path(@game.id),:class => 'btn btn-primary btn-sm', :method => :delete %>
  <% end %>

<p>
  <strong>Creator:</strong>
  <%= gravatar_for @game.user, size: 50 %>
  <%= @game.user.name %>
</p>

<p>
  <strong>Start:</strong>
  <%= @game.start %>
</p>

<p>
  <strong>End:</strong>
  <%= @game.end %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @game.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @game.longitude %>
</p>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<h2>Who's coming?</h2>

<ul>
	<% @game.attendees.each do |attendee| %>
	    <li>
      <%= gravatar_for attendee, size: 50 %>
      <%= link_to attendee.name, attendee %>
    </li>
	<% end %>
</ul>



<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<script>
$(document).ready(function(){
handler = Gmaps.build('Google');
handler.buildMap({ provider: {
  center: {lat: <%= @game.latitude %> , lng: <%= @game.longitude %>}
  }, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      {
      "lat": <%= @game.latitude %>,
      "lng": <%= @game.longitude %>,
      "picture": {
        "width":  32,
        "height": 32
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(16)
});
});
</script>