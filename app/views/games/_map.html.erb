<% if !(defined? Gmaps) || !(defined? google) %>

<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyDJbp32tSbN-En9Zb2eU43iGwPmqp2uYwc"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<% end %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gmaps4rails/2.1.2/gmaps4rails.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>

<ul class="nav nav-tabs">
  <li class="nav-item active">
    <%= link_to "Map", games_path(view: "map") %>
  </li>
  <li class="nav-item">
    <%= link_to "List", games_path(view: "list") %>
  </li>
  <li class="pull-right tag"><a>
    Listing Games</a>
  </li>
</ul>


<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 400px;'></div>
</div>

<script>
$(document).ready(function(){
handler = Gmaps.build('Google');
handler.buildMap({ provider: {
  center: {lat: 42.4075 , lng: -71.1190}
  }, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.getMap().setZoom(16)
});
});
</script>