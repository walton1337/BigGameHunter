<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
      <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

          <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :gametype %><br>
        <%= f.collection_select(:gametype_id, Gametype.all, :id, :name) %>
      </div>
      <div class="field">
        <%= f.label :start %><br>
        <%= f.datetime_select :start %>
      </div>
      <div class="field">
        <%= f.label :end %><br>
        <%= f.datetime_select :end %>
      </div>
      <%= f.hidden_field :user_id %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>