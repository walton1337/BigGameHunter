<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Start</th>
      <th>End</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.user.name %></td>
        <td><%= game.start.strftime("%m/%d %I:%M%p %Z") %></td>
        <td><%= game.end.strftime("%m/%d %I:%M%p %Z") %></td>
        <td><%= game.attendees.count %></td>
        <td><%= link_to 'Show', game, :class => 'btn btn-secondary btn-sm' %></td>
        <% if user_signed_in? && current_user!=game.user && !game.attendees.map(&:id).include?(current_user.id) %>
          <td>
            <%= button_to 'join game', join_game_path(game.id),:class => 'btn btn-secondary btn-sm', :method => :post %>
          </td>
        <% end %>
        <% if current_user==game.user %>
          <td><%= link_to 'Edit', edit_game_path(game), :class => 'btn btn-secondary btn-sm' %></td>
          <td>
          <%=  button_to 'Destroy',game,:class => 'btn btn-danger-outline btn-sm', method: :delete, :onclick => "return confirm('Are you sure you want to delete this game?')" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Game', new_game_path,  :class => 'btn btn-primary' %>
<% end %>
