  <body>
    <header class ="navbar navbar-fixed-top navbar-inverse">
      <div>
        <%= link_to 'BigGameHunter', games_path , id: "logo", :class => 'navbar-link', 'data-no-turbolink' => true %>
        <nav>
          <p class="navbar-text pull-right"> <!-- nav navbar-nav navbar-right -->
          <%= link_to "Users", users_path %>
      		<% if user_signed_in? %>
            <%= gravatar_for current_user, size: 30 %>
      		  Logged in as <strong><%= link_to current_user.name, current_user , :class => 'navbar-link' %> </strong> |
      		  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
      		  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      		<% else %>
      		  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      		  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
      		<% end %>
          </p>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  </body>
